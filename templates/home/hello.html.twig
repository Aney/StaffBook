{% extends 'base.html.twig' %}

{% block title %}Hello{% endblock %}

{% block body %}
<main class="example-wrapper">

	<section class="form">
	{% for message in app.flashes('success') %}
		<p class="success">{{ message }}</p>
	{% endfor %}

	{% for message in app.flashes('error') %}
		<p class="error">{{ message }}</p>
	{% endfor %}


	<p id="jsError" class="error"></p>

	{{ form_start(form) }}
		<h1>Employees</h1>
		<div class="form_data">
			<div class="form_row">
			<div class="form_col_1">
			{{ form_label(form.firstname, "First Name") }}
			</div>
			<div class="form_col_2">
			{{ form_errors(form.firstname) }}
			{{ form_widget(form.firstname) }}
			</div>
			</div>

			<div class="form_row">
			<div class="form_col_1">
			{{ form_label(form.lastname, "Last Name") }}
			</div>
			<div class="form_col_2">
			{{ form_widget(form.lastname) }}
			</div>
			</div>

			<div class="form_row">
			<div class="form_col_1">
			{{ form_label(form.dob, "Date of birth") }}
			</div>
			<div class="form_col_2">
			{{ form_errors(form.dob) }}
			{{ form_widget(form.dob) }}
			</div>
			</div>

			<div class="form_row">
			<div class="form_col_1">
			{{ form_label(form.email, "Email Address") }}
			</div>
			<div class="form_col_2">
			{{ form_errors(form.email) }}
			{{ form_widget(form.email) }}
			</div>
			</div>

			<div class="form_row">
			{{ form_widget(form.submit) }}
			</div>
		</div>
	{{ form_end(form) }}
	</section>

	<div class="test">
	<table>
		<thead>
			<tr>
				<th><p>First name:</p></th>
				<th><p>Last name:</p></th>
				<th><p>Date of birth:</p></th>
				<th><p>Email address:</p></th>
			</tr>
		</thead>
		<tbody>
			{% for staffMember in staff %}
			<tr>
				<td><p>{{ staffMember.Firstname}}</p></th>
				<td><p>{{ staffMember.Lastname}}</p></th>
				<td><p>{{ staffMember.Dob|date("d-m-Y")}}</p></th>
				<td><p>{{ staffMember.Email}}</p></th>
			</tr>
			{% endfor %}
		</tbody>
	</table>
	</div>
</main>
{% endblock %}
